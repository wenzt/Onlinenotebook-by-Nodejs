<%- include header %>
<% if(user) { %>
<div class="container">
    <div class="row" >
        <table class="table table-striped">
            <caption>我的笔记列表</caption>
            <thead>
            <tr>
                <th>标题</th>
                <th>标签</th>
                <th>日期</th>
            </tr>
            </thead>
            <tbody>
            <% notes.forEach(function(note) { %>
            <tr>
                <td>
                    <a href="/detail/<%= note._id %>"><%= note.title %></a>
                </td>
                <td><%= note.tag     %></td>
                <td><%= note.createTime %></td>
            </tr>
            <% });%>
            </tbody>
        </table>
    </div>
</div>
<% } else {%>
<div class="container">
    <div class="jumbotron">
        <h1>我的第一个Bootstrap页面</h1>
        <p>重置窗口大小,查看相应式效果!</p>
    </div>
    <div class="row">
        <div class="col-sm-4">
            <h3>第一列</h3>
            <p>1</p>
            <p>1</p>
        </div>
        <div class="col-sm-4">
            <h3>第二列</h3>
            <p>2</p>
            <p>2</p>
        </div>
        <div class="col-sm-4">
            <h3>第三列</h3>
            <p>3</p>
            <p>3</p>
        </div>
    </div>
</div>
<% } %>
<%- include footer %>