<%- include header %>
<script>
    function checkstr(str)
    {
        if(str.length<3 || str.length >20)
        {
            console.log(str);
            alert("对不起，汉字只能在2-7个间");
            return;

        }
        if (str.match(/^[a-zA-Z0-9_]$/))
        {
            alert("对不起，用户名只能是字母、数字、下划线的组合");

        }
    }
</script>
<div class="text-center page-title">新用户注册</div>
<div class="container">
    <div class="row">
        <div class="col-xs-4 col-xs-offset-4">
            <form method="post">
                <div class="form-group">
                <input  id="un" type="text" class="form-control" name="username" placeholder="用户名">
                </div>

                <div class="form-group">
                    <input type="password" class="form-control" name="password" placeholder="密码">
                </div>

                <div class="form-group">
                    <input type="password" class="form-control" name="passwordRepeat" placeholder="确认密码">
                </div>

                <button type="submit" class="btn btn-default center-block" onclick=checkstr(un.name) >注册</button>
            </form>
        </div>
    </div>
</div>

<%- include footer %>